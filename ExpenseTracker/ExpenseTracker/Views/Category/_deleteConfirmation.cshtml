@model ExpenseTracker.Model.Category
@using (Html.BeginForm("Delete", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Category Delete</h4>
    </div>
    <div class="modal-body">
        Are you sure you want to delete this category?
        <table class="table-hover table-striped table m-t-10">
            <tr>
                <td>Category</td>
                <td>Status</td>
            </tr>
            <tr>
                <td>
                    @Html.HiddenFor(model => model.Id)
                    @Model.Name
                </td>
                <td><span class="label @((Model.Status == 1) ? "label-success" : "label-warning")">@((Model.Status == 1) ? "Active" : "Inactive")</span></td>
            </tr>
        </table>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

        <button type="submit" class="btn btn-primary">Delete</button>

    </div>
}