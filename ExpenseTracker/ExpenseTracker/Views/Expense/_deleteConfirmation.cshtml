@model ExpenseTracker.Model.Expense
@using (Html.BeginForm("Delete", "Expense", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Category Delete</h4>
    </div>
    <div class="modal-body">
        Are you sure you want to delete this Expense?
        <table class="table-hover table-striped table m-t-10">
            <tr>
                <td>Item</td>
                <td>Category</td>
                <td>Amount</td>
                <td>Date</td>
            </tr>
            <tr>
                <td>
                    @Model.Item
                    @Html.HiddenFor(model=>model.Id)
                </td>
                <td>@Model.CategoryName</td>
                <td>@Model.Amount</td>
                <td>@Model.ViewDate</td>
            </tr>
        </table>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Delete</button>
    </div>
}
