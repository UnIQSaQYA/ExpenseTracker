@model  ExpenseTracker.Model.Expense

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <div class="form-group">
                <label for="name">Date: <span class="text-danger">*</span></label>
                @Html.TextBoxFor(model => model.ViewDate ,new { @class = "form-control input-sm datepicker", @placeholder = "Expense Amount", @autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.ViewDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6 col-xs-12">
            <div class="form-group">
                <label for="amount">Amount: <span class="text-danger">*</span></label>
                @Html.TextBoxFor(model => model.Amount, new { @class = "form-control input-sm", @placeholder = "Expense Amount", @autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <div class="form-group">
                <label for="name">Item: <span class="text-danger">*</span></label>
                @Html.TextBoxFor(model => model.Item, new { @class = "form-control input-sm", @placeholder = "Expense Item", @autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Item, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6 col-xs-12">
            <div class="form-group">
                <label for="name">Category: <span class="text-danger">*</span></label>
                @Html.DropDownListFor(model => model.CategoryId, new SelectList(ViewBag.categories, "Id", "Name"), "Select Category", new { @class = "form-control input-sm", @placeholder = "Expense Item", @autocomplete = "off" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="description">
            Description:
        </label>
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control input-sm" })
    </div>
    <button class="btn btn-success">Submit</button>
}
