@model ExpenseTracker.Model.ExpenseLimit
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Breadcrumbs{
    <div class="main-breadcrumb">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
            <li class="active">Expense Limit Update</li>
        </ol>
    </div>
}
<div class="panel panel-default">
    <div class="panel-heading">
        Add Expense Limit
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="form-group">
                        <label for="name">Amount: <span class="text-danger">*</span></label>
                        @Html.TextBoxFor(model => model.LimitAmount, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="col-md-12 col-xs-12">
                    <div class="form-group">
                        <label for="disable">Disable Expense Limit</label><br />

                        @Html.CheckBoxFor(model => model.Status, new { @checked = "true" })
                    </div>
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        }
    </div>
</div>